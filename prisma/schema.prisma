// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BanList {
  id           Int       @id @default(autoincrement())
  username     String
  user         UserList  @relation(fields: [username], references: [name])
  admin        String
  region       String
  reason       String?
  removal_date DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model WhiteList {
  id           Int       @id @default(autoincrement())
  username     String
  user         UserList  @relation(fields: [username], references: [name])
  admin        String
  region       String
  reason       String?
  removal_date DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model AdminList {
  id           Int       @id @default(autoincrement())
  username     String
  user         UserList  @relation(fields: [username], references: [name])
  admin        String
  region       String
  role         String
  removal_date DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model UserList {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  UserStats UserStats[]
  BanList   BanList[]
  WhiteList WhiteList[]
  AdminList AdminList[]
}

model UserStats {
  id          Int      @id @default(autoincrement())
  username    String
  user        UserList @relation(fields: [username], references: [name])
  gameName    String
  mapName     String
  gamesPlayed Int      @default(0)
}

model Logs {
  id        Int      @id @default(autoincrement())
  source    String
  message   String
  priority  String   @default("verbose")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
