{
  "name": "wc3multitool",
  "version": "1.1.0-alpha",
  "description": "A multi-tool for Warcraft 3",
  "repository": {
    "type": "git",
    "url": "git://github.com/kgallimore/wc3multitool.git"
  },
  "main": "src/app.js",
  "scripts": {
    "compile": "tsc -w",
    "build": "tsc",
    "start": "concurrently \"npm:compile\"  \"electron-forge start\"",
    "publish": "electron-builder --publish always",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "wc3multitool",
    "productName": "WC3 Multi-Tool",
    "copyright": "Keith Gallimore",
    "extraFiles": [
      {
        "from": "./src/webui.html",
        "to": "."
      },
      {
        "from": "./src/Models",
        "to": "./models"
      },
      {
        "from": "./src/webui.js",
        "to": "."
      },
      {
        "from": "./src/webuiPerf.html",
        "to": "."
      },
      {
        "from": "./public",
        "to": "./public"
      },
      {
        "from": "./src/images",
        "to": "./images"
      },
      {
        "from": "./src/sounds",
        "to": "./sounds"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/images/wc3_auto_balancer_v2.png"
    },
    "nsis": {
      "installerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "uninstallerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "artifactName": "WC3-Multi-Tool-Setup-${version}.${ext}",
      "uninstallDisplayName": "WC3 Multi-Tool",
      "include": "src/installer.nsh",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "WC3_Multi-Tool_Setup_portable.exe",
      "unpackDirName": "wc3MultiTool_portable"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://war.trenchguns.com/publish"
      }
    ],
    "protocols": [
      {
        "name": "wc3mt",
        "role": "Viewer",
        "schemes": [
          "wc3mt"
        ]
      }
    ]
  },
  "author": "Trenchguns",
  "license": "UNLICENSED",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "WC3 Multi Tool"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@types/discord-rpc": "^4.0.5",
    "@types/node": "^20.4.1",
    "@types/sound-play": "^1.1.0",
    "@types/validator": "^13.7.17",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@discordjs/rest": "^1.7.1",
    "@nut-tree/nl-matcher": "^2.2.0",
    "@nut-tree/nut-js": "^3.1.2",
    "bufferutil": "^4.0.7",
    "cross-fetch": "^4.0.0",
    "discord-api-types": "^0.37.47",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.11.0",
    "electron-log": "^5.0.0-beta.24",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "fast-geoip": "^1.1.88",
    "firebase": "^9.19.1",
    "form-data": "^4.0.0",
    "js-combinatorics": "^2.1.1",
    "languagedetect": "^2.0.0",
    "mariadb": "^3.2.0",
    "mysql2": "^3.5.0",
    "nanoid": "^4.0.2",
    "node-abi": "^3.45.0",
    "node-window-manager": "^2.2.4",
    "obs-websocket-js": "^5.0.3",
    "public-ip": "^4.0.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "socket.io-client": "^4.6.1",
    "sound-play": "^1.1.0",
    "sqlite3": "^5.1.6",
    "translate": "^2.0.2",
    "translate-google": "^1.5.0",
    "w3gjs": "^2.5.0",
    "wc3mt-lobby-container": "^1.1.1",
    "ws": "^8.13.0"
  }
}
