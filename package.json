{
  "name": "wc3multitool",
  "version": "0.8.1",
  "description": "A multi-tool for Warcraft 3",
  "repository": {
    "type": "git",
    "url": "git://github.com/trenchguns/wc3multitool.git"
  },
  "main": "src/app.js",
  "scripts": {
    "compile": "tsc -w",
    "build": "tsc && npm run svelte-build",
    "start": "concurrently \"npm:compile\" \"npm:svelte-dev\" \"electron-forge start\"",
    "publish": "electron-builder --publish always",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "rebuild": "electron-rebuild",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "wc3multitool",
    "productName": "WC3 Multi-Tool",
    "copyright": "Trenchguns",
    "extraFiles": [
      {
        "from": "./webui.html",
        "to": "."
      },
      {
        "from": "./webui.js",
        "to": "."
      },
      {
        "from": "./GlueManagerAltered.js",
        "to": "."
      },
      {
        "from": "./public",
        "to": "./public"
      },
      {
        "from": "./src/images",
        "to": "./images"
      },
      {
        "from": "./src/sounds",
        "to": "./sounds"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/images/wc3_auto_balancer_v2.png"
    },
    "nsis": {
      "installerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "uninstallerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "uninstallDisplayName": "WC3 Multi-Tool",
      "include": "src/installer.nsh",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "WC3_Multi-Tool_Setup_portable.exe",
      "unpackDirName": "wc3MultiTool_portable"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://war.trenchguns.com/publish"
      }
    ],
    "protocols": [
      {
        "name": "wc3mt",
        "role": "Viewer",
        "schemes": [
          "wc3mt"
        ]
      }
    ]
  },
  "author": "Trenchguns",
  "license": "UNLICENSED",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "WC3 Multi Tool"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/request": "^2.48.7",
    "@types/sound-play": "^1.1.0",
    "@types/ws": "^8.2.1",
    "concurrently": "^6.4.0",
    "electron": "^13.6.2",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^3.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "rollup": "^2.60.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.44.2",
    "svelte-preprocess": "^4.9.8",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^2.0.0-RC1",
    "@nut-tree/template-matcher": "^1.0.0-RC1",
    "@types/better-sqlite3": "^7.4.1",
    "better-sqlite3": "^7.4.4",
    "cross-fetch": "^3.1.4",
    "discord.js": "^12.5.3",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "esm": "^3.2.25",
    "form-data": "^2.3.3",
    "https": "^1.0.0",
    "js-combinatorics": "^1.5.3",
    "nanoid": "^3.1.25",
    "robotjs": "^0.6.0",
    "sound-play": "^1.1.0",
    "w3gjs": "^2.4.2",
    "ws": "^8.2.0"
  }
}
