{
  "name": "wc3multitool",
  "version": "1.0.5-alpha",
  "description": "A multi-tool for Warcraft 3",
  "repository": {
    "type": "git",
    "url": "git://github.com/kgallimore/wc3multitool.git"
  },
  "main": "src/app.js",
  "scripts": {
    "compile": "tsc -w",
    "build": "tsc && npm run svelte-build",
    "start": "concurrently \"npm:compile\" \"npm:svelte-dev\" \"electron-forge start\"",
    "publish": "electron-builder --publish always",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "rebuild": "electron-rebuild",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "wc3multitool",
    "productName": "WC3 Multi-Tool",
    "copyright": "Keith Gallimore",
    "extraFiles": [
      {
        "from": "./src/webui.html",
        "to": "."
      },
      {
        "from": "./src/webui.js",
        "to": "."
      },
      {
        "from": "./focusWar.js",
        "to": "."
      },
      {
        "from": "./GlueManagerAltered.js",
        "to": "."
      },
      {
        "from": "./public",
        "to": "./public"
      },
      {
        "from": "./src/images",
        "to": "./images"
      },
      {
        "from": "./src/sounds",
        "to": "./sounds"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/images/wc3_auto_balancer_v2.png"
    },
    "nsis": {
      "installerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "uninstallerIcon": "src/images/wc3_auto_balancer_v1.ico",
      "artifactName": "WC3-Multi-Tool-Setup-${version}.${ext}",
      "uninstallDisplayName": "WC3 Multi-Tool",
      "include": "src/installer.nsh",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "WC3_Multi-Tool_Setup_portable.exe",
      "unpackDirName": "wc3MultiTool_portable"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://war.trenchguns.com/publish"
      }
    ],
    "protocols": [
      {
        "name": "wc3mt",
        "role": "Viewer",
        "schemes": [
          "wc3mt"
        ]
      }
    ]
  },
  "author": "Trenchguns",
  "license": "UNLICENSED",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "WC3 Multi Tool"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/better-sqlite3": "^7.5.0",
    "@types/discord-rpc": "^4.0.3",
    "@types/node": "^18.6.1",
    "@types/node-fetch": "^2.6.2",
    "@types/request": "^2.48.8",
    "@types/sound-play": "^1.1.0",
    "@types/validator": "^13.7.4",
    "@types/ws": "^8.5.3",
    "concurrently": "^6.5.1",
    "electron": "^19.0.9",
    "electron-builder": "^23.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "rollup": "^2.77.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.49.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "@nut-tree/nl-matcher": "^1.0.3-next.20220114002500",
    "@nut-tree/nut-js": "^2.1.1",
    "better-sqlite3": "^7.6.2",
    "bufferutil": "^4.0.6",
    "cross-fetch": "^3.1.4",
    "discord-api-types": "^0.36.3",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.0.3",
    "electron-log": "^4.4.8",
    "electron-store": "^8.0.2",
    "electron-updater": "^5.0.5",
    "fast-geoip": "^1.1.88",
    "firebase": "^9.9.1",
    "form-data": "^2.5.1",
    "https": "^1.0.0",
    "js-combinatorics": "^2.1.1",
    "languagedetect": "^2.0.0",
    "mariadb": "^3.0.0",
    "mysql2": "^2.3.3",
    "nanoid": "^3.3.4",
    "node-abi": "^3.22.0",
    "node-window-manager": "^2.2.4",
    "obs-websocket-js": "^4.0.3",
    "public-ip": "^4.0.4",
    "sequelize": "^6.21.3",
    "socket.io-client": "^2.5.0",
    "sound-play": "^1.1.0",
    "sqlite3": "^5.0.10",
    "translate": "^1.4.1",
    "translate-google": "^1.5.0",
    "w3gjs": "^2.5.0",
    "wc3mt-lobby-container": "^1.1.0",
    "ws": "^8.8.1"
  }
}
